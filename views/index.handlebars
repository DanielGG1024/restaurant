<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="{{searchWord}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<!-- restaurant list -->
<div class="container mt-5">
    <a href="/restaurants/new" class="btn btn-info">Create</a>
    <div class="row">

        {{#if restaurants}}
        {{#each restaurants}}
        <div class="col-md-4 col-12 mx-auto">
            <div class="card-columns mt-3 d-flex">
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i>{{this.category}}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal mb-3">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                            <div>
                                <a href="/restaurants/{{this._id}}/edit" class="btn btn-info">edit</a>
                                <a href="/restaurants/{{this._id}}" class="btn btn-info">detail</a>
                                <button type="submit" class="btn btn-danger" data-toggle="modal"
                                    data-target="#Modal{{this._id}}">delete</button>

                            </div>

                        </div>
                    </div>
                </a>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="Modal{{this._id}}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">確認刪除?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{this.name}}
                        </div>
                        <div class="modal-footer">
                            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST"
                                style="display: inline;">
                                <button type="submit" class="btn btn-danger">delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        {{/each}}

        {{else}}
        <div class="col-md-4 col-12 mx-auto font-weight-bold h1">
            <p class="">查無資料!!</p>

        </div>
        {{/if}}
    </div>
</div>